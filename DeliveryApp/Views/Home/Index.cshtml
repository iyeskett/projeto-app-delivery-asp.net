@model IEnumerable<DeliveryApp.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem Vindo</h1>
    <p>Faça o seu pedido.</p>
</div>

<table class="table table-bordered">
    <thead>
        <tr class="table">
            <th class="fs-1">
                Produtos
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table">
                <td class="fw-bold d-flex justify-content-between align-items-center">
                    <div class="d-flex flex-column">
                        <img src="@item.Image" class="img-thumbnail" style="height:150px;width:150px;" alt="...">
                        @Html.DisplayFor(model => item.Name)
                    </div>
                    @using (Html.BeginForm("AddToCartFromHome", "Home", new { @idProduct = item.Id }, FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-outline-primary ">Adicionar ao carrinho</button>
                    }
                </td>
            </tr>
            <tr class="table">
                <td>
                    <p>
                        @Html.DisplayFor(model => item.Details)
                    </p>
                </td>
            </tr>
            <tr class="table">
                <td class="text-end">
                    <a>Preço: @Html.DisplayFor(model => item.Price)</a>
                </td>
            </tr>

        }
    </tbody>
</table>
