@model DeliveryApp.Models.UserLogin
@{
    ViewData["Title"] = "Editar Usuário";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="text-decoration:none; color: #2d2d2d; font-weight: bold;">Editar usuário</h1>


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                @Html.ValidationMessageFor(x => x.Username, "", new { @class =  "text-warning"})
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                @Html.ValidationMessageFor(x => x.Email, "", new { @class =  "text-warning"})
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                @Html.ValidationMessageFor(x => x.Password, "", new { @class =  "text-warning"})
            </div>

            <div class="form-group">

                <label asp-for="Type" class="control-label"></label>
                @*<input asp-for="Tipo" id="tipoAcesso" readonly class="form-control" />*@

                <select name="Type" asp-for="Type" readonly class="form-control">
                    <option value="Admin">ADMIN</option>
                    <option value="Mod">MOD</option>
                </select>
                @Html.ValidationMessageFor(x => x.Type, "", new { @class =  "text-warning"})


            </div>


            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Voltar</a>
</div>
