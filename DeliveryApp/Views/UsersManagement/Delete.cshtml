@model DeliveryApp.Models.UserLogin
@{
    ViewData["Title"] = "Deletar Usuário";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h1 style="color: red">Deseja realmente deletar esse usuário?</h1>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Username)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Username)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Email)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Email)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Password)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Password)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Type)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Type)
