@model DeliveryApp.Models.Product
@{
    ViewData["Title"] = "Novo Produto";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h1>Adicionar novo produto</h1>

<hr />

<div class="row">

    <div class="col-md-4">
        <form asp-action="New">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="Name" />

                <div class="invalid-feedback">
                    Digite o nome do produto
                </div>

                @Html.ValidationMessageFor(x => x.Name)
            </div>

            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" id="Details" />

                <div class="invalid-feedback">
                    Digite os detalhes do produto
                </div>

                @Html.ValidationMessageFor(x => x.Details)
            </div>


            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" id="Price" />
                <div class="invalid-feedback">
                    Requisitos: <br />
                    <ul>
                        <li>Valor maior que 0</li>
                        <li>Valor não pode ser em branco</li>
                        <li>Valor numérico</li>
                    </ul>

                </div>
                @Html.ValidationMessageFor(x => x.Price)
            </div>



            <br />
            <div class="form-group">
                <input type="submit" value="Novo" class="btn btn-primary" />
            </div>

        </form>

    </div>

</div>


<br />
<div>
    <a asp-action="Index">Voltar</a>
</div>