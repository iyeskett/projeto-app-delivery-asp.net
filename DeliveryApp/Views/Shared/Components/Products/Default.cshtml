@model DeliveryApp.Models.Product
@{

}

<li class="list-group-item" id="ilTable">

    <div class="media align-items-lg-center flex-column flex-lg-row p-3">

        <div class="media-body order-2 order-lg-1">

            <h5 class="mt-0 font-weight-bold mb-2">@Model.Name</h5>

            <p class="font-italic text-muted mb-0 small">@Model.Details</p>

            <div class="d-flex align-items-center justify-content-between mt-1">

                <h6 class="font-weight-bold my-2">R$@Model.Price</h6>

            </div>

        </div>

        <img src="@Model.Image" alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2 img-product mb-1">

        <form asp-action="AddToCartFromHome" data-ajax-loading="#loading@(Model.Id)" data-ajax-mode="replace" data-ajax-update="#updateDiv@(Model.Id)" data-ajax-success="Success" data-ajax-failure="Failure" data-ajax="true">

            <input type="hidden" asp-for="Id" class="form-control" />

            <button type="submit" class="btn btn-primary mt-3">Adicionar ao carrinho</button>
            <span id="loading@(Model.Id)"> <i class="fas fa-spinner fa-spin"></i></span>

        </form>

        <div id="updateDiv@(Model.Id)" class="hideMessage">
        </div>

    </div>

</li> 